@*@model EDReciboTiendaSoriana.EDShared.Combo*@

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inicio</title>
    @Styles.Render("~/OperaContentBootstrap/css")
    @Scripts.Render("~/OperaScriptBootstrap/js")
</head>
<body onload="funReady('','')">
    <div class="cont">
        <div class="barraTitulo">
            <table>
                <tr>
                    <td style="width:10%;">
                        <button type="button" class="btn-xs btn-default" onclick="FuncionAtras();"><span class="glyphicon glyphicon-arrow-left" aria-hidden="true"></span></button>
                    </td>
                    <td class="m-t text-center" style="width:79%">@Session["TituloPagina"]</td>
                    <td><input type="text" id="inNav" name="inNav" onkeyup="Nav()" /></td>
                </tr>
            </table>
        </div>
        <div class="container-fluid">
            @Scripts.Render("~/OperaScripts/js")
            @RenderBody()
        </div>

        <input type="hidden" id="nombreSitio" value="@Session["srvName"]" />
    </div>

    <script>
        function FuncionAtras() {

            var link = document.createElement('a');
            var url = '@Url.Action("Inicio","Menu")';
            link.href = url;
            document.body.appendChild(link);
            link.click();
        }

        function Nav() {
            var IsOperaMobile = (navigator.userAgent.indexOf("Opera") >= 0) && (navigator.userAgent.indexOf("Mobile") >= 0);
            var opcion = document.getElementById("inNav").value;

            if (IsOperaMobile) {
                switch (opcion) {
                    case "L":
                    case "l":
                        var link = document.createElement('a');
                        var url = '@Url.Action("logOut", "Menu")';
                        link.href = url;
                        document.body.appendChild(link);
                        link.click();
                        break;
                    case "H":
                    case "h":
                        var link = document.createElement('a');
                        var url = '@Url.Action("pagLog", "Menu")';
                        link.href = url;
                        document.body.appendChild(link);
                        link.click();
                        break;
                    case "0":
                        var url = '@Url.Action("Inicio","Menu")';
                        window.location.href = url;
                        break;
                    case "1":
                        var url = '@Url.Action("AutorizaMerma", "MciaPorCaducar")';
                        window.location.href = url;
                        break;

                    case "2":
                        var url = '@Url.Action("CapturaMcia", "MciaPorCaducar")';
                        window.location.href = url;
                        break;
                }
            }
            else {
                if (event.keyCode == 13) {
                    switch (opcion) {
                        case "L":
                        case "l":
                            var link = document.createElement('a');
                            var url = '@Url.Action("logOut", "Menu")';
                            link.href = url;
                            document.body.appendChild(link);
                            link.click();
                            break;
                        case "H":
                        case "h":
                            var link = document.createElement('a');
                            var url = '@Url.Action("pagLog", "Menu")';
                            link.href = url;
                            document.body.appendChild(link);
                            link.click();
                            break;
                        case "0":
                            var url = '@Url.Action("Inicio","Menu")';
                            window.location.href = url;
                            break;
                        case "1":
                            var url = '@Url.Action("AutorizaMerma", "MciaPorCaducar")';
                            window.location.href = url;
                            break;

                        case "2":
                            var url = '@Url.Action("CapturaMcia", "MciaPorCaducar")';
                            window.location.href = url;
                            break;

                    }
                }
            }
        }

        function FuncionLogOut() {
            var link = document.createElement('a');
            var url = '@Url.Action("logOut", "Menu", new { }, null)';
            var link = document.createElement('a');
            //url = url.replace("param-id", ced);
            link.href = url;
            document.body.appendChild(link);
            link.click();
        }
    </script>

</body>
</html>