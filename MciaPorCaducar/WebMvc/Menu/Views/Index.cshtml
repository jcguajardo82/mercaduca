                <label class="textCapitalize">@Session["lblResult"]</label>
            </div>

            @{
                int contador = 0;
                foreach (var menu in ViewBag.listMenu)
                {
                    int index = 0;
                    var idMenu = @menu.Id_Recurso;
                    var colap = "#op" + @menu.Id_Recurso;
                    var colap2 = "op" + @menu.Id_Recurso;
                    <div class="panel panel-default">
                        <a href="@colap" class="panel-title accordion-toggle" style="color:#333333">
                            <div style="background:#f5f5f5" class="panel-heading" data-parent="#accordion" data-toggle="collapse" href="@colap" data-target="@colap">
                                <h4 class="panel-title accordion-toggle textCapitalize">
                                    @menu.Nombre
                                </h4>
                            </div>
                        </a>

                        <div id="@colap2" class="panel-collapse  @(contador == 0 ? "in" : "collapse")">
                            <div class="panel-body">
                                @foreach (var submenu in menu.subM)
                                {
                                    string clas = "";
                                    if ((index % 2) == 0)
                                    {
                                        clas = "widget style1 navy-bg";
                                    }
                                    else
                                    {
                                        clas = "widget style1 navy-bg-danger";
                                    }


                                    <div class="row">
                                        @for (int ind = 0; ind < submenu.Value.Count; ind++)
                                        {
                                            var item = submenu.Value[ind];


                                            <div class="col-sm-3 col-md-3 col-lg-3" onclick="location.href=@Url.Action(item.accion, item.controlador)" style="cursor:pointer;">
                                                <a href="@Url.Action(item.accion, item.controlador)" id="lnkNuevoApartado">
                                                    <div class="@clas">
                                                        <div class="row">
                                                            <div class="col-xs-9 text-left vertical-align top">
                                                                <h3>
                                                                    <span style="color:white;font-size:15px" class="textCapitalize">@item.Nombre</span>
                                                                </h3>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </a>
                                            </div>

                                        }
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                    contador = 1;
                }
            }
        </div>
        <br />
        <a href="#" id="B" onclick="CheckFocus();return false;" style="text-decoration:none;color:#ffffff;"></a>

        <input type="hidden" id="FocusOn" name="FocusOn" value="inNav" />
        <input id="flagOpcion" value="Principal" style="visibility:hidden" />
        <input id="flagError" value="@Session["flagError"]" style="visibility:hidden" />
    </div>
</div>


